@model Sale

<h3>Edit Transactions</h3>
<form asp-action="Edit" >
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="SaleID" />
    <div class="form-group">
        <label asp-for="Date">Date:</label>
        <input type="text" asp-for="Date" class="form-control" />
        <span asp-validation-for="Date" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="StoreID">Store:</label>
        <select asp-for="StoreID" class="form-control"
                asp-items="@(new SelectList(ViewBag.Stores, "StoreID","StoreID"))">
            <option value=""></option>
        </select>
        <span asp-validation-for="StoreID" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CustomerID">Customer:</label>
        <select asp-for="CustomerID" class="form-control"
                asp-items="@(new SelectList(ViewBag.Customers, "CustomerID","CustomerID"))">
            <option value=""></option>
        </select>
        <span asp-validation-for="CustomerID" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Edit" class="btn btn-info" />
        <a asp-action="Index" class="btn btn-warning">Cancel</a>
    </div>
</form>



