@model Sale
@{
    ViewData["Title"] = "Delete";
}

<h3>Delete</h3>
<h4>Are you sure you want to delete this transaction?</h4>
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Store)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Store.StoreID)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Customer)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Customer.Name)
        </dd>
    </dl>
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="SaleID" />
        <button type="submit" class="btn btn-danger"> Delete </button>
        <a asp-controller="Sale" asp-action="Index" class="btn btn-warning">Cancel</a>
    </form>
</div>


